<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alignmentMode="alignBounds"
    android:columnCount="2"
    android:columnOrderPreserved="true"
    android:orientation="vertical"
    android:rowCount="7"
    android:useDefaultMargins="true"
    tools:context=".MainActivity">


    <!--Row 0 Column 0-->
    <include

        android:id="@+id/item_top_nos"
        layout="@layout/include_top_nos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="center_vertical|start"
        android:layout_row="0" />

    <!--Row 0 Column 0-->
    <include
        android:id="@+id/item_bois_nos"
        layout="@layout/include_bois_nos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="center_vertical|end"
        android:layout_row="0"
        android:layout_rowWeight="1" />


    <!--Row 2-->
    <include
        android:id="@+id/item_pontos_nos"
        layout="@layout/include_pontos_nos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_row="1"
        android:layout_rowWeight="1" />

    <!--Row 3 -->
    <include
        android:id="@+id/item_tabela_pontos_nos"
        layout="@layout/include_tabela_pontos_nos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_row="2"
        android:layout_rowWeight="1" />
    <include
        android:visibility="gone"
        android:id="@+id/item_mao_de_onze_nos"
        layout="@layout/include_mao_de_onze"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_row="2"
        android:layout_rowWeight="1" />

    <!--Row 4 -->
    <TextView
        android:id="@+id/txtVs"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_row="3"
        android:layout_rowWeight="1"
        android:text="Vs"
        android:textColor="@color/colorTextPrimary"
        android:textSize="20sp" />

     <!--Row 5 -->
    <include
        android:id="@+id/item_tabela_pontos_eles"
        layout="@layout/include_tabela_pontos_eles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_row="4"
        android:layout_rowWeight="1" />
    <include
        android:visibility="gone"
        android:id="@+id/item_mao_de_onze_eles"
        layout="@layout/include_mao_de_onze"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_row="4"
        android:layout_rowWeight="1" />

    <!--Row 6 -->
    <include
        android:id="@+id/item_pontos_eles"
        layout="@layout/include_pontos_eles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_row="5"
        android:layout_rowWeight="1" />

    <!--Row 5 -->
    <include
        android:id="@+id/item_top_eles"
        layout="@layout/include_top_eles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="center_vertical|start"
        android:layout_row="6"
        android:layout_rowWeight="1" />

    <!--Row 6-->
    <include
        android:id="@+id/item_bois_eles"
        layout="@layout/include_bois_eles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="center_vertical|end"
        android:layout_row="6"
        android:layout_rowWeight="1" />


</GridLayout>
