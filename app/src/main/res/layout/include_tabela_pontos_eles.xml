<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_tabela_eles"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alignmentMode="alignBounds"
    android:columnCount="4"
    android:columnOrderPreserved="true"
    android:orientation="horizontal"
    android:rowCount="2"
    android:useDefaultMargins="true">
    
    <!--Row 0 Column 0-->
    <LinearLayout
        android:id="@+id/txt_tabela_eles_soma_3"
        android:layout_gravity="center_horizontal|center_vertical"
        android:orientation="horizontal"
        android:layout_column="0"
        android:layout_row="0"
        android:padding="@dimen/padding_tabela_pontos">
        <TextView
            android:text="+"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@color/colorPositve"/>
        <TextView
            android:text="3"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@color/colorTextPrimary"/>
    </LinearLayout>

    <!--Row 0 Column 1-->
    <LinearLayout
        android:id="@+id/txt_tabela_eles_soma_6"
        android:layout_gravity="center_horizontal|center_vertical"
        android:orientation="horizontal"
        android:layout_column="1"
        android:layout_row="0"
        android:padding="@dimen/padding_tabela_pontos">
        <TextView
            android:text="+"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@color/colorPositve"/>
        <TextView
            android:text="6"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@color/colorTextPrimary"/>
    </LinearLayout>

    <!--Row 0 Column 2-->
    <LinearLayout
        android:id="@+id/txt_tabela_eles_soma_9"
        android:layout_gravity="center_horizontal|center_vertical"
        android:orientation="horizontal"
        android:layout_column="2"
        android:layout_row="0"
        android:padding="@dimen/padding_tabela_pontos">
        <TextView
            android:text="+"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@color/colorPositve"/>
        <TextView
            android:text="9"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@color/colorTextPrimary"/>
    </LinearLayout>

    <!--Row 0 Column 3-->
    <LinearLayout
        android:id="@+id/txt_tabela_eles_soma_12"
        android:layout_gravity="center_horizontal|center_vertical"
        android:orientation="horizontal"
        android:layout_column="3"
        android:layout_row="0"
        android:padding="@dimen/padding_tabela_pontos">
        <TextView
            android:text="+"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@color/colorPositve"/>
        <TextView
            android:text="12"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@color/colorTextPrimary"/>
    </LinearLayout>

    <!--Row 1 Column 0|1-->
    <LinearLayout
        android:id="@+id/txt_tabela_eles_subtrai_3"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_row="1"
        android:padding="@dimen/padding_tabela_pontos">
        <TextView
            android:text="-"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@color/colorNegative"/>
        <TextView
            android:text="3"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@color/colorTextPrimary"/>
    </LinearLayout>

    <!--Row 1 Column 2|3-->
    <LinearLayout
        android:id="@+id/txt_tabela_eles_subtrai_6"
        android:orientation="horizontal"
        android:layout_column="2"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_columnSpan="2"
        android:layout_row="1"
        android:padding="@dimen/padding_tabela_pontos">
        <TextView
            android:text="-"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@color/colorNegative"/>
        <TextView
            android:text="6"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@color/colorTextPrimary"/>
    </LinearLayout>
</GridLayout>